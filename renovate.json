{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "rangeStrategy": "bump",
  "timezone": "Australia/Sydney",
  "postUpdateOptions": ["yarnDedupeHighest"],
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "packageRules": [
    {
      "groupName": "Lint",
      "matchPackageNames": ["prettier", "*eslint*"]
    },
    {
      "groupName": "Typescript",
      "matchPackageNames": ["typescript"]
    },
    {
      "groupName": "Forge",
      "matchPackageNames": ["@forge/*"]
    },
    {
      "groupName": "Atlaskit",
      "matchPackageNames": ["@atlaskit/*"]
    },
    {
      "groupName": "Atlassian",
      "matchPackageNames": ["@atlassian/**"]
    },
    {
      "groupName": "React",
      "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"]
    },

    {
      "groupName": "Vite",
      "matchPackageNames": ["vite", "@vitejs/*"]
    }
  ]
}
